<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="click"
            type="com.crystallake.main.MainActivity.ClickProxy" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_125"
        android:background="@color/common_F6FBFF">

        <ImageView
            android:id="@+id/addImg"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@drawable/ic_main_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_10" />

        <View
            android:id="@+id/navigation_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_main_bottom_navigation_bg" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homeCl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/navigation_container"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_container"
            app:layout_constraintStart_toStartOf="@+id/navigation_container"
            app:layout_constraintEnd_toStartOf="@+id/statisticsCl"
            android:onClick="@{()->click.goHome()}"
            >

            <ImageView
                android:id="@+id/homeIv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@drawable/ic_main_home" />

            <TextView
                android:id="@+id/homeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/homeIv"
                app:layout_constraintEnd_toEndOf="@+id/homeIv"
                app:layout_constraintTop_toBottomOf="@+id/homeIv"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/common_home"
                android:textSize="@dimen/dp_12" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statisticsCl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/homeCl"
            app:layout_constraintTop_toTopOf="@+id/navigation_container"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_container"
            app:layout_constraintEnd_toStartOf="@+id/addCl">

            <ImageView
                android:id="@+id/statisticsIv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_main_statistics_default"
                android:layout_marginTop="@dimen/dp_14"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/statisticsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/statisticsIv"
                app:layout_constraintEnd_toEndOf="@+id/statisticsIv"
                app:layout_constraintTop_toBottomOf="@+id/statisticsIv"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/common_statistics"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addCl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/statisticsCl"
            app:layout_constraintTop_toTopOf="@+id/navigation_container"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_container"
            app:layout_constraintEnd_toStartOf="@+id/walletCl"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/walletCl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/addCl"
            app:layout_constraintTop_toTopOf="@+id/navigation_container"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_container"
            app:layout_constraintEnd_toStartOf="@+id/mineCl">

            <ImageView
                android:id="@+id/walletIv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@drawable/ic_main_wallet_default" />

            <TextView
                android:id="@+id/walletTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/walletIv"
                app:layout_constraintEnd_toEndOf="@+id/walletIv"
                app:layout_constraintTop_toBottomOf="@+id/walletIv"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/common_wallet"
                android:textSize="@dimen/dp_12" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mineCl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/walletCl"
            app:layout_constraintTop_toTopOf="@+id/navigation_container"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_container"
            app:layout_constraintEnd_toEndOf="@+id/navigation_container">

            <ImageView
                android:id="@+id/mineIv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@drawable/ic_main_mine_default" />

            <TextView
                android:id="@+id/mineTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/mineIv"
                app:layout_constraintEnd_toEndOf="@+id/mineIv"
                app:layout_constraintTop_toBottomOf="@+id/mineIv"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/common_mine"
                android:textSize="@dimen/dp_12" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>